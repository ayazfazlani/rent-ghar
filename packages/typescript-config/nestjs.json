{
    "extends": "./base.json",                          
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "module": "CommonJS",                             
      "moduleResolution": "node",
      "target": "ES2022",
      "declaration": true,                             
      "emitDecoratorMetadata": true,                    
      "experimentalDecorators": true,                 
      "sourceMap": true,                                
      "outDir": "./dist",                               
      "removeComments": false,                          
      "incremental": true                               
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.spec.ts"] 
  }